<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Login</h1>
  <div class="col-6 offset-3">
    <form action="/login" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <lable for="title" class="form-lable">Username</lable>
        <input
          type="text"
          id="username"
          name="username"
          class="form-control"
          required
        />
        
      </div>
      
      <div class="mb-3">
        <lable for="title" class="form-lable">Password</lable>
        <input
          type="password"
          id="password"
          name="password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-success">Login</button>
    </form>
  </div>
</div>
