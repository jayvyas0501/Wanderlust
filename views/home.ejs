<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Wanderlust | Home</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    crossorigin="anonymous"
  />
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
    crossorigin="anonymous"
    referrerpolicy="no-referrer"
  />
  <style>
    body {
      font-family: "Plus Jakarta Sans", sans-serif;
      line-height: 1.6;
    }

    /* Hero Section */
    .hero {
      background: url("https://a0.muscache.com/im/pictures/miso/Hosting-hero.jpg") 
        center/cover no-repeat;
      height: 100vh;
      color: white;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      position: relative;
    }

    .hero::after {
      content: "";
      position: absolute;
      inset: 0;
      background: rgba(0,0,0,0.4);
    }

    .hero-content {
      position: relative;
      z-index: 1;
    }

    .hero h1 {
      font-size: 3.5rem;
      font-weight: bold;
    }

    .hero p {
      font-size: 1.25rem;
      margin-top: 1rem;
    }

    .hero .btn {
      margin-top: 2rem;
      padding: 0.75rem 2rem;
      font-size: 1.2rem;
      border-radius: 2rem;
    }

    /* Categories */
    .categories {
      padding: 4rem 2rem;
    }

    .categories h2 {
      text-align: center;
      margin-bottom: 3rem;
      font-weight: bold;
    }

    .category-card {
      border-radius: 1rem;
      overflow: hidden;
      transition: transform 0.2s ease;
    }

    .category-card:hover {
      transform: scale(1.05);
      cursor: pointer;
    }

    /* Contact Section */
    .contact {
      background: #f8f9fa;
      padding: 4rem 2rem;
    }

    .contact h2 {
      text-align: center;
      margin-bottom: 2rem;
      font-weight: bold;
    }

    .contact form {
      max-width: 600px;
      margin: auto;
    }

    footer {
      text-align: center;
      padding: 2rem;
      background: #212529;
      color: white;
    }
  </style>
</head>
<body>

  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-content">
      <h1>Find Your Next Stay</h1>
      <p>Discover unique homes and unforgettable experiences worldwide.</p>
      <a href="/listings" class="btn btn-light">Explore Listings</a>
    </div>
  </section>

  <!-- Categories Section -->
  <section class="categories container">
    <h2>Popular Categories</h2>
    <div class="row row-cols-lg-4 row-cols-md-2 row-cols-1 g-4">
      <div class="col">
        <div class="card category-card">
          <img src="https://a0.muscache.com/im/pictures/category-beach.jpg" class="card-img-top" alt="Beach Houses">
          <div class="card-body text-center"><h5>Beach Houses</h5></div>
        </div>
      </div>
      <div class="col">
        <div class="card category-card">
          <img src="https://a0.muscache.com/im/pictures/category-mountain.jpg" class="card-img-top" alt="Mountains">
          <div class="card-body text-center"><h5>Mountains</h5></div>
        </div>
      </div>
      <div class="col">
        <div class="card category-card">
          <img src="https://a0.muscache.com/im/pictures/category-city.jpg" class="card-img-top" alt="City Apartments">
          <div class="card-body text-center"><h5>Cities</h5></div>
        </div>
      </div>
      <div class="col">
        <div class="card category-card">
          <img src="https://a0.muscache.com/im/pictures/category-cabins.jpg" class="card-img-top" alt="Cabins">
          <div class="card-body text-center"><h5>Cabins</h5></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="contact">
    <h2>Contact Us</h2>
    <form>
      <div class="mb-3">
        <label for="name" class="form-label">Your Name</label>
        <input type="text" class="form-control" id="name" placeholder="Enter your name">
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Your Email</label>
        <input type="email" class="form-control" id="email" placeholder="Enter your email">
      </div>
      <div class="mb-3">
        <label for="message" class="form-label">Message</label>
        <textarea class="form-control" id="message" rows="5" placeholder="Type your message"></textarea>
      </div>
      <button type="submit" class="btn btn-primary w-100">Send Message</button>
    </form>
  </section>

  <!-- Footer -->
  <footer>
    <p>&copy; <%= new Date().getFullYear() %> Wanderlust | Built with ❤️</p>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
