<% layout("/layouts/boilerplate.ejs") %>

  <body>
    <div class="row mt-3">
      <div class="col-8 offset-3">
        <h1>
          <%= listing.title %>
        </h1>
      </div>

      <div class="card col-6 offset-3 show-card listinfg-card">
        <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_img" />
        <div class="card-body">
          <p class="card-text">

            <%= listing.description %><br />
              &#8377;<%= listing.price.toLocaleString("en-IN") %><br />
                <%= listing.location %><br />
                  <%= listing.country %>
          </p>
        </div>
      </div>

      <div class="btns">

        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>


        <form method="post" action="/listings/<%=listing._id%>?_method=DELETE">
          <button class="btn btn-dark offset-4">Delete</button>
        </form>

      </div>

      <div class="col-8 offset-3 mb-3">
        <hr>
        <h4>Leave review</h4>
        <form action="/listings/<%= listing._id%>/reviews" method="post" novalidate class="needs-validation">
          <div class="mb-3 mt-3">
            <lable for="rating" class="form-label">Rating</lable>
            <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" />
          </div>
          <div class="mb-3 mt-3">
            <label for="comment" class="form-label">Comment</label>
            <textarea name="review[comment]" id="comment" class="form-control" cols="30" rows="5" required></textarea>
            <div class="invalid-feedback">Please add comment</div>
          </div>

          <button type="submit" class="btn btn-outline-dark">Submit</button>
        </form>
        </hr>
        <h4><b>All Reviews</b></h4>

        <div class="row">
          <%for(review of listing.reviews){%>
            <div class="col-5 mb-3 ms-3 card ">
              <div class="card-body">
                <h5 class="card-title">Jhno doe</h5>
                <p class="card-text">
                  <%= review.comment %>
                </p>
                <p class="card-text">
                  <%= review.rating %> star
                </p>
              </div>
              <form class="mb-3" method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                <button class="btn btn-dark btn-sm">Delete</button>
              </form>
            </div>
            
            <%}%>
        </div>
      </div>
    </div>
  </body>